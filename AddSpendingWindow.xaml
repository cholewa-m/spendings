<Window x:Class="spendings_WPF.AddSpendingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:spendings_WPF"
        mc:Ignorable="d"
        Title="AddSpendingWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Title:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <TextBox x:Name="titleTextBox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" />

        <Label Content="Cost:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,30,0,0" />
        <TextBox x:Name="costTextBox" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Margin="0,30,0,0" />

        <Label Content="Date:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,60,0,0" />
        <DatePicker x:Name="datePicker" HorizontalAlignment="Right" VerticalAlignment="Top" Width="200" Margin="0,60,0,0" />

        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,90,0,0" Click="addButton_Click" />
    </Grid>
</Window>
